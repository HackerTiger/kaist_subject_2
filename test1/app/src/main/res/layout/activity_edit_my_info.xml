<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:orientation="vertical"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#a4f2c2"/>
            <Button
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/green_background_square"
                android:text="수정"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_background_square"
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내프로필"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background_square_bottom"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/myName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="병장"
                        android:textSize="17sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#000000"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <Button
                        android:id="@+id/editName"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginRight="22dp"
                        android:background="@drawable/green_background_square"
                        android:text="수정"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/myNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="010-0000-0000"
                        android:textSize="17sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#000000"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <Button
                        android:id="@+id/editNum"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginRight="22dp"
                        android:background="@drawable/green_background_square"
                        android:text="수정"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/myEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="koreaArmy@postech.ac.kr"
                        android:textSize="17sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#000000"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <Button
                        android:id="@+id/editMail"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginRight="22dp"
                        android:background="@drawable/green_background_square"
                        android:text="수정"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_background_square"
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스텍"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background_square_bottom"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/techStackText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Java, C, C++, C#, Dart, python"
                        android:textSize="17sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#000000"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <Button
                        android:id="@+id/techStack"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginRight="22dp"
                        android:background="@drawable/green_background_square"
                        android:text="수정"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_background_square"
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고수의 한마디"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background_square_bottom"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/gosuTalkWrite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="10dp"
                    android:text="배고파배고파배고파배고파배고파배고파배고파배고파배고파배고파배고파배고파배고파배고파배고파" />
                <Button
                    android:id="@+id/gosuTalk"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/green_background_square"
                    android:text="수정"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_background_square"
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경력"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/white_background_square_bottom"
                android:orientation="vertical">
                <ListView
                    android:id="@+id/career"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/addCareer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:background="@drawable/green_background_square"
            android:text="+"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/showLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="등수 보기"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/green_background_square"
            android:layout_margin="10dp"
            />

    </LinearLayout>


</ScrollView>