<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:id="@+id/scrollView">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginTop="118dp"
            android:text="회원가입"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="12dp"
            android:text="아이디"/>
        <LinearLayout
            android:layout_width="374dp"
            android:layout_height="46dp"
            android:background="#a4f2c2"
            android:gravity="center"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="#ffffff">
                <EditText
                    android:background="@color/white"
                    android:id="@+id/sign_up_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="영문, 숫자 조합 6자리 이상"/>
            </LinearLayout>
            <Button
                android:id="@+id/id_confirm"
                android:background="#a4f2c2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="중복확인"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="12dp"
            android:text="비밀번호"/>

        <LinearLayout
            android:layout_width="374dp"
            android:layout_height="46dp"
            android:background="#a4f2c2"
            android:gravity="center"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="#ffffff">
                <EditText
                    android:background="@color/white"
                    android:id="@+id/sign_up_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="영어,숫자,특수문자 조합 8자리 이상"/>
            </LinearLayout>
            <Button
                android:id="@+id/password_confirm"
                android:background="#a4f2c2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="비밀번호 확인"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="12dp"
            android:text="닉네임"/>

        <LinearLayout
            android:layout_width="374dp"
            android:layout_height="46dp"
            android:background="#a4f2c2"
            android:gravity="center"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="#ffffff">
                <EditText
                    android:background="@color/white"
                    android:id="@+id/sign_up_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="닉네임 입력후 중복확인 해주세요!"/>
            </LinearLayout>
            <Button
                android:id="@+id/nickname_confirm"
                android:background="#a4f2c2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="중복확인"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="12dp"
            android:text="성별"/>

        <LinearLayout
            android:layout_width="374dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <RadioGroup
                android:id="@+id/radioGroup"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RadioButton
                    android:id="@+id/r_btn1"
                    android:text="남자"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/r_btn2"
                    android:text="여자"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/r_btn3"
                    android:text="기타"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="374dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="68dp">
            <Button
                android:background="#a4f2c2"
                android:id="@+id/sign_up_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="회원가입"
                android:textStyle="bold"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>